{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": false,
    "outDir": "./build/ts-out",
    "baseUrl": ".",
    "typeRoots": ["../../build/js/node_modules/@types", "../../build/js/node_modules"],
    "paths": {
      "react": ["../../build/js/node_modules/react"],
      "react-dom": ["../../build/js/node_modules/react-dom"],
      "react-router-dom": ["../../build/js/node_modules/react-router-dom"]
    }
  },
  "include": ["src/jsMain/resources/react/**/*"],
  "exclude": ["node_modules", "build"]
}
